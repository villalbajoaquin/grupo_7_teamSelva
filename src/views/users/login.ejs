<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/users/user.css">
    <script src="https://kit.fontawesome.com/5d58b48687.js" crossorigin="anonymous"></script>

</head>

<body>
  <header>

    <%- include('../partials/topheader') %>

  </header>
  <% if (typeof errors !='undefined' ) { %>
    <p style="color: red;">ERROR</p>
    <ul>
      <% for (let i=0; i < errors.length; i++) { %>
        <li>
          <%=errors[i].msg%>
        </li>
        <% } %>
    </ul>
    <% } %>
      }
      <form class="formulario" action="users/login" method="post">
        <h1>Ingresar</h1>
        <div class="input-contenedor">
          <i class="fa-solid fa-circle-user icon"></i>
          <input class="input1" type="email" name="nombre" placeholder="Indique su email" id="nombre">
        </div>
        <div class="input-contenedor">
          <i class="fa-solid fa-lock icon"></i>
          <input class="input1" type="password" name="password" placeholder="Indique su contraseña">
        </div>

        <input type="submit" value="Ingresar" class="button">

        <p>
          ¿No tienes una cuenta?<a class="link" href="/user/register"> Registrate</a>
        </p>

      </form>

      <footer>
        <%- include('../partials/bottomfooter') %>
      </footer>

</body>

</html>