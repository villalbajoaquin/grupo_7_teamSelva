<body>
    <header>
        <nav>
            <div class="container">
                <a href="/"><img src="\img\logo-prop2.png" alt="logo" class="logo"></a>
            </div>
            <input type="checkbox" id="check">
            <label for="check" class="bar-btn">
                <i class="bi bi-list"></i>
            </label>
            <ul class="nav-menu">
                <li><a href="#">24 HS</a></li>
