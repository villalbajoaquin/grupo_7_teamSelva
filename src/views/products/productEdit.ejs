<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/products/productCreate.css">

    <script src="https://kit.fontawesome.com/d160ea4c64.js" crossorigin="anonymous"></script>
    <title>Editar producto</title>
</head>
<body>
    <header>
        <%- include('../partials/topheader') %>
    </header>
    <main>
        <div class="new-event">

            <div>
                <h2>Editar evento</h2>
            </div>

            <div class="container">
                <div class="standar-img"> <img src="/<%=shows.imgsrc%>" > </div>
                <form action="/product/product_list/<%=shows.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <section class="info-show">
                        
                        <div>
                            <label>Nombre:</label>
                            <input type="text" name="name" value="<%= shows.name %>" placeholder="Nombre del show">
                            <% if (locals.errors && errors.name) { %>
                                <p class="error-msg"> <%= errors.name.msg %> </p>
                            <% } %> 
                        </div>
                      
                        <div>
                            <label>Fecha:</label>
                            <input type="date" value="<%= shows.date %>" name="date" placeholder="Fecha del show">
                            <% if (locals.errors && errors.date) { %>
                                <p class="error-msg"> <%= errors.date.msg %> </p>
                            <% } %> 
                        </div>

                        <div>
                            <label>Hora:</label>
                            <input type="time" value="<%= shows.time %>" name="time" placeholder="Hora del show">
                            <% if (locals.errors && errors.time) { %>
                                <p class="error-msg"> <%= errors.time.msg %> </p>
                            <% } %> 
                        </div>

                        <div>
                            <label>Tickets:</label>
                            <input type="number" value="<%= shows.tickets %>" name="tickets" placeholder="Cantidad de tickets">
                            <% if (locals.errors && errors.tickets) { %>
                                <p class="error-msg"> <%= errors.tickets.msg %> </p>
                            <% } %>
                        </div>

                        <div>
                            <label>Precio:</label>
                            <input type="text" value="<%= shows.price %>" name="price" placeholder="Precio del show">
                            <% if (locals.errors && errors.price) { %>
                                <p class="error-msg"> <%= errors.price.msg %> </p>
                            <% } %>
                        </div>

                        <div>
                            <input type="file" value="<%= shows.imgsrc %>" name="imgsrc" placeholder="Imagen del show">
                        </div>

                        <div class="button-send">
                            <button type="submit">Enviar</button>
                        </div>    

                        <div class="button-reset">
                            <button type="reset">Borrar campos</button>
                        </div>
                    </section>

                </form>

            </div>

        </div>

    </main>


    
    <footer>
        <%- include('../partials/bottomfooter') %>
    </footer>
</body>
</html>